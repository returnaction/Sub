@using Sub.Models.Entities.Employee.VM
@model EmployeeAddVM
@{
    ViewData["Title"] = "AddEmployee";
}

<h1>AddEmployee</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4">

            <form class="mt-4" asp-controller="Employee" asp-action="AddEmployee" method="post" enctype="multipart/form-data">
                <input hidden asp-for="UserId" />

                <div class="form-group">
                    <label asp-for="Position" class="font-weight-bold"></label>
                    <input asp-for="Position" type="text" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Obligation" class="font-weight-bold"></label>
                    <textarea asp-for="Obligation" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Obligation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CompanyId" class="font-weight-bold"></label>
                    <input asp-for="CompanyId" type="number" value="1" class="form-control" />
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Добавить</button>

            </form>

        </div>
    </div>
</div>