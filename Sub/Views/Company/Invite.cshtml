@using Sub.Models.Entities.Invitation
@model InvitationVM

@{
    ViewData["Title"] = "Invite";
}

<h2>Пригласить в компанию</h2>

<form asp-action="Invite" asp-controller="Company" method="post">
    <div class="form-group">
        <label asp-for="InviteeEmail"></label>
        <input asp-for="InviteeEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompanyId"></label>
        @* <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-control"></select> потмо сделать что бы выбрать можно было *@
        <input asp-for="CompanyId" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Отправить приглашение</button>
</form>